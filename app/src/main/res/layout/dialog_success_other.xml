<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
   >
    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/tvRequestName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black_color"
        android:text="Other issue"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:text="enter detail of your issue"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:textColor="@color/black_color1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="12sp"
        android:padding="5dp"
        android:id="@+id/edOther"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_ed"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:background="@color/color_pending"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
   <LinearLayout
       android:weightSum="2"
       android:layout_width="match_parent"
       android:layout_height="40dp">
       <Button
           android:background="?android:attr/selectableItemBackground"
           android:layout_gravity="center"
           android:gravity="center"
           android:textAllCaps="false"
           android:text="Cancel"
           android:id="@+id/btnCancel"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="40dp" />
       <Button
           android:background="?android:attr/selectableItemBackground"
           android:layout_gravity="center"
           android:gravity="center"
           android:textAllCaps="false"
           android:text="Ok"
           android:id="@+id/btnOk"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="40dp" />
   </LinearLayout>
    <View
        android:background="@color/color_pending"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
