<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#454545"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:id="@+id/tvLocation"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="5dp"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="@string/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPurpose"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="5dp"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="- Our main purpose is to build mobile applications which are simple, friendly and useful for daily life.\n- All our applicaitons are free to download and use within a month.\r
     \n- We always expect users'feedbacks in order to improve products better and better everday.

\n\nContact us: sales@cstsolution.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
