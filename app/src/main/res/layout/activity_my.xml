<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/rlScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv"
            android:background="@color/blue"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <com.cst.scanner.Custom.TakePictureView
            android:layout_marginLeft="100dp"
            android:layout_marginRight="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/java_camera_view"
            opencv:camera_id="any" />

        <TextView
            android:id="@+id/tvScan"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="Scan"
            android:textColor="@color/colorRed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:visibility="visible"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:weightSum="5"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llV"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:rotation="279"
                    android:background="@drawable/ic_done_indigo_a200"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAuto"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/imgAuto"
                    android:rotation="90"
                    android:background="@drawable/ic_auto_on"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llTakepictue"
                android:gravity="center"
                android:background="@drawable/ic_gps"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" >
                <ImageView
                    android:background="@drawable/takepictue"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFlash"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/imgFlash"
                    android:rotation="279"
                    android:background="@drawable/flash_off"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llX"
                android:gravity="center"
                android:background="@drawable/ic_gps"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@drawable/x"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
