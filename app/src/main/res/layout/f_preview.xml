<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:background="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white_color">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="80dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_back_blue" />
            </LinearLayout>

            <TextView
                android:id="@+id/nameDoc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/preview"
                android:textAlignment="center"
                android:textColor="@color/cornflower_blue"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:background="@color/transparent"
                android:textColor="@color/white_color"
                android:layout_alignParentBottom="true"
                android:id="@+id/edComment"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:rotation="90"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/login_text_color"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/llCamera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/x_preview" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTurnL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/turn"
                    android:rotation="240" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTurnR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView

                    android:rotation="110"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/turn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llComent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/chat" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>