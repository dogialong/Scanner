<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlTop"
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_back_blue"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:text="DOC 20170613"
                android:textColor="@color/cornflower_blue"
                android:textAlignment="center"
                android:id="@+id/nameDoc"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:text="1/2"
                android:textColor="@color/cornflower_blue"
                android:textAlignment="center"
                android:layout_below="@id/nameDoc"
                android:id="@+id/position"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:layout_marginTop="50dp"
            android:layout_marginBottom="45dp"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            />
        <LinearLayout
            android:weightSum="4"
            android:background="@color/white_color"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/linearLayout">
            <LinearLayout
                android:id="@+id/llCamera"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/ic_photo_camera_blue_900"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llKey"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:rotation="40"
                    android:background="@drawable/ic_vpn_key_blue_900_24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDelete"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/ic_delete_blue_900_24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llArrow"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/ic_arrow_upward_blue_900_24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>